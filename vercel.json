{
  "version": 2,
  "builds": [{
    "src": "package.json",
    "use": "@vercel/static-build",
    "config": {
      "distDir": "build",
      "includeFiles": [
        "src/**",
        "public/**",
        "package.json"
      ]
    }
  }],
  "routes": [{
    "src": "/(.*)", 
    "dest": "/index.html"
  }],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=0"
        }
      ]
    }
  ],
  "regions": ["hkg1"],
  "public": true
}
