{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "types": ["node"],
    "paths": {
      "@prisma/client": ["./src/generated/prisma"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
